<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    
    <com.darwindeveloper.horizontalscrollmenulibrary.custom_views.HorizontalScrollMenuView
        android:id="@+id/expanded_menu"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:backgroundMenuColor="@color/colorPrimaryDark"
        app:backgroundNotifications="@color/colorPrimary"
        app:icon_height="50dp"
        app:icon_width="50dp"
        app:item_backgroundColor="@color/colorPrimaryDark"
        app:item_colorSelected="@color/colorPrimary"
        app:item_marginBottom="4dp"
        app:item_marginLeft="4dp"
        app:item_marginRight="4dp"
        app:item_marginTop="4dp"
        app:item_textColor="#fff"
        app:item_textSize="7sp" />


    <ImageView
        android:id="@+id/target_image"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:contentDescription="current_image" />


    <LinearLayout
        android:id="@+id/row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginBottom="1dp">

        <Button
            android:id="@+id/loadimage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="20sp"
            style="?android:attr/buttonBarButtonStyle"
            android:padding="8dp"
            android:layout_marginEnd="1dp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorPrimary"
            android:text="Load image" />
        <Button
            android:id="@+id/restore"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="20sp"
            style="?android:attr/buttonBarButtonStyle"
            android:padding="8dp"
            android:layout_marginEnd="1dp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorPrimary"
            android:text="restore" />

        <Button
            android:id="@+id/take_picture"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="20sp"
            style="?android:attr/buttonBarButtonStyle"
            android:padding="8dp"
            android:layout_marginEnd="1dp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorPrimary"
            android:text="Take Picture" />

    </LinearLayout>





</LinearLayout>